<div id="top-alert" class="top-alert <%- locals.message.type ? 'open ' + locals.message.type : '' %>">
    <div>
        <div class="top-alert-innerDiv">
            <div id="top-alert-closebtn" class="top-alert-closebtn">
                <div class="close-btn" onclick="toggleClass('top-alert', 'open')"></div>
            </div>
            <div id="top-alert-title" class="top-alert-title">
                <%- locals.message.title %>
            </div>
            <div id="top-alert-body" class="top-alert-body">
                <%- locals.message.body %>
            </div>
        </div>
    </div>
</div>