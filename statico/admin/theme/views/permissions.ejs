<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Statico admin dashboard Permissions Page">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5/42.0.2/ckeditor5.css" />
    <link rel="stylesheet" href="/styles/style.css">
    <title>Statico - Admin Dashboard - Permissions</title>
</head>
<body class="d-flex flex-column h-100">
    
        <header id="top-header" class="top-header">
            <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
                <div class="container-fluid ps-3">
                    <span class="navbar-brand mb-0 h1">Statico Admin</span>
                    <div class="float-end">
                        <span class="text-light me-3">
                            <%= user.username %>
                        </span>
                        <span class="float-end">
                            <a href="/logout">Logout</a>
                        </span>
                    </div>
                </div>
            </nav>
        </header>

    <div class="row gx-0">
        <div id="sidebar" class="col-md-3 col-lg-2 permissions">
            <ul class="list-group list-group-flush">
                <%for (const [modelName, model] of Object.entries(sidebarData)) {%>
                    <li class="list-group-item list-group-item-action d-flex flex-row <%-modelName%><%-model.selected ? ' active' : '' %>">
                        <% if(model.selected){%>
                            <div class="w-100 me-2 fw-bold">
                                <span class="badge text-bg-warning rounded-pill me-2 boxShadow"><%= model.count %></span>
                                <%=caption = model.displayName%>
                            </div>
                        <%}else{%>
                            <a href="/admin/<%=modelName%>" class="d-block w-100 me-2 text-decoration-none fw-bold">
                                <span class="badge text-bg-warning rounded-pill me-2 boxShadow"><%= model.count %></span>
                                <%=model.displayName%>
                            </a>
                        <%}%>
                        <div class="pointer modelAddBtn" onclick="createItemClick('<%=modelName%>', '<%=JSON.stringify(model.selectFields)%>')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                </svg>
                        </div>
                    </li>
                <%}%>
                <li class="list-group-item list-group-item-action d-flex flex-row active">
                    <div class="w-100 me-2 fw-bold">
                        Permissions
                    </div>
                </li>
            </ul>
        </div>
        <main class="col-md-9 ms-sm-auto col-lg-10 ps-4 pe-4">

            <div id="top-alert" class="top-alert <%- locals.hasMessages ? ' open ' : '' %>" role="alert">
                <div>
                    <div class="alert alert-<%-locals.messageType%>">
                        <div id="top-alert-closebtn" class="top-alert-closebtn cursorPoint">
                            <div class="close-btn" onclick="toggleClass('top-alert', 'open')"></div>
                        </div>
                        <div id="top-alert-title" class="top-alert-title">
                            <%= locals.messageTitle %>
                        </div>
                        <div id="top-alert-body" class="top-alert-body">
                            <ul class="mb-0">
                                <% messages.forEach(function(message) { %>
                                    <li><%= message %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <table class="table  table-striped-columns caption-top">
                    <caption class="text-center fs-4 bg-warning-subtle">Roles Permissions</caption>
                    <thead class="table-primary">
                        <tr>
                            <th style="width:5%">
                                &nbsp;
                            </th>
                            <%roles.forEach((role) => {%>
                                <th scope="col" colspan="2" class="align-top" style="width:19%">
                                    <div class="text-center text-capitalize">
                                        <%=role.name%>
                                    </div>
                                    <p class="text-break form-text fw-lighter p-0 m-0">
                                        <%=role.description%>
                                    </p>
                                </th>
                            <%})%>
                        </tr>
                        <tr>
                            <th style="width:50px">Permission Key</th>
                            <%roles.forEach(() => {%>
                                <th colspan="2">
                                    <div class="d-flex">
                                        <div class="w-25">
                                            Allowed
                                        </div>
                                        <div class="flex-grow-1 ps-3">
                                            Filter
                                        </div>
                                    </div>
                                </th>
                            <%})%>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <%Object.keys(permissions[adminRoleId]).forEach((permissionKey) => {%>
                            <tr>
                                <td>
                                    <%=permissionKey%>
                                </td>
                                <%roles.forEach((role) => {%>
                                    <td colspan="2">
                                        <div class="d-flex">
                                            <div class="w-25">
                                                <%=permissions[role.id][permissionKey].allow%>
                                            </div>
                                            <div>
                                                <%=JSON.stringify(permissions[role.id][permissionKey].where)%>
                                            </div>
                                        </div>
                                    </td>
                                <%})%>
                            </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-body-tertiary">
        <div class="container">
            <span class="text-body-secondary">@copyright statico.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/script.js"></script>

</body>
</html>