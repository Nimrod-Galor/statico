<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="/styles/style.css">
    <title>Statico - Admin Dashboard</title>
</head>
<body class="d-flex flex-column h-100">
    
        <header id="top-header" class="top-header">
            <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
                <div class="container-fluid ps-3">
                    <span class="navbar-brand mb-0 h1">Statico Admin</span>
                    <div class="float-end">
                        <span class="text-light me-3">
                            <%= user.username %>
                        </span>
                        <span class="float-end">
                            <a href="/logout">Logout</a>
                        </span>
                    </div>
                </div>
            </nav>
        </header>

    <div class="row gx-0">
        <div id="sidebar" class="col-md-3 col-lg-2">
            <ul class="list-group list-group-flush">
                <% modelsInterface.forEach((model) => { %>
                    <li class="list-group-item list-group-item-action d-flex flex-row <%- model.name.toLowerCase() == contentType ? 'active' : '' %>">
                        <% if(model.name.toLowerCase() == contentType){%>
                            <div class="w-100 me-2 fw-bold">
                                <span class="badge text-bg-warning rounded-pill me-2 boxShadow"><%= model.count %></span>
                                <%=model.header%>
                            </div>
                        <%}else{%>
                            <a href="/admin/<%-model.name.toLowerCase()%>" class="d-block w-100 me-2 text-decoration-none fw-bold">
                                <span class="badge text-bg-warning rounded-pill me-2 boxShadow"><%= model.count %></span>
                                <%=model.header%>
                            </a>
                        <%}%>
                        <div class="pointer modelAddBtn" onclick="createItemClick('<%-model.name.toLowerCase()%>', '<%=JSON.stringify(model.fields)%>')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                </svg>
                        </div>
                    </li>
                <%})%>
            </ul>
        </div>
        <main class="col-md-9 ms-sm-auto col-lg-10 ps-4 pe-4">

            <div id="top-alert" class="top-alert <%- locals.hasMessages ? ' open ' : '' %>" role="alert">
                <div>
                    <div class="alert alert-<%-locals.messageType%>">
                        <div id="top-alert-closebtn" class="top-alert-closebtn cursorPoint">
                            <div class="close-btn" onclick="toggleClass('top-alert', 'open')"></div>
                        </div>
                        <div id="top-alert-title" class="top-alert-title">
                            <%= locals.messageTitle %>
                        </div>
                        <div id="top-alert-body" class="top-alert-body">
                            <ul class="mb-0">
                                <% messages.forEach(function(message) { %>
                                    <li><%= message %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="horizontal-collapse">
                
                <div>
                    <div id="close-model-create" class="close-model-create float-end" onclick="closeModelView()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                            </svg>
                    </div>
                    <!-- User -->
                    <div id="model-user" class="content-type-wrapp">
                        <h3 class="mb-3">Create User</h3>
                        <form id="create-user" action="/admin/create/user" method="POST" onsubmit="return validateForm(event)" novalidate>
                            <input type="hidden" id="id" name="id" value="" />
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="" required>
                                <label for="email">Email address</label>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Invalid email address
                                </div>    
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" value="true" id="emailverified" name="emailverified" checked="true">
                                <label class="form-check-label" for="emailverified">
                                    Send verification email
                                </label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" pattern="(?=.*?[0-9])(?=.*?[A-Za-z]).{8,32}" required>
                                <label for="password">Password</label>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a valid password that is at least 8 characters
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="username" name="username" pattern="[A-Za-z0-9_\-]{6,20}" required>
                                <label for="username">User name</label>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please choose a username that is at least 6 characters.
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <select class="form-select" id="role" name="role" aria-label="Floating label select example">
                                    <% roles.forEach((role) => { %>
                                        <option value="<%-role.id%>"><%-role.name%></option>
                                    <%})%>
                                    
                                </select>
                                <label for="role">Role</label>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                    <!-- Post -->
                    <div id="model-post" class="content-type-wrapp pt-0 d-none" style="padding: 5% 10%;">
                        <h3 class="mb-3">Create Post</h3>
                        <form id="create-post" action="/admin/create/post" method="POST" style="max-width: 80%;" onsubmit="validateForm(event)" novalidate>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="title" name="title" pattern="[a-zA-Z0-9 \-_!@#$%&\(\)\*\/]{3,64}" required>
                                <label for="title">Title</label>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Invalid Title
                                </div>    
                            </div>
                            <div class="form-floating mb-3">
                                <textarea class="form-control" placeholder="Leave a comment here" id="body" name="body" minlength="4" style="height: 500px" required></textarea>
                                <label for="body">Body</label>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter your post in the textarea.
                                </div>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" value="true" id="publish" name="publish" checked="true">
                                <label class="form-check-label" for="publish">
                                    Publish
                                </label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="slug" name="slug" pattern="[a-zA-Z0-9\-_]{3,64}">
                                <label for="slug">Slug</label>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Invalid Slug
                                </div>    
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                    <div id="model-comment" class="content-type-wrapp d-none">
                        <h3 class="mb-3">Create Comment</h3>
                        <form id="create-comment" action="/admin/create/comment" method="POST" onsubmit="validateForm(event)" novalidate>

                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                    <div id="model-role" class="content-type-wrapp d-none">
                        <h3 class="mb-3">Create Role</h3>
                        <form id="create-role" action="/admin/create/role" method="POST" onsubmit="validateForm(event)" novalidate>

                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>
                
                <div>
                    <header>

                    </header>
                    <table class="table caption-top">
                        <caption>List of <%-contentType%></caption>
                        <thead class="table-primary">
                            <tr>
                                <% modelHeaders.forEach((field) => {%>
                                    <th scope="col">
                                        <%-field.header%>
                                    </th>
                                <%})%>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <% modelData.forEach((data) => {%>
                                <tr>
                                    <!-- < %- JSON.stringify(data) %> -->
                                    <% modelHeaders.forEach((field) => {%>
                                        <td>
                                            <% if(field.relation){ %>
                                                <a href="/admin/<%-field.relation + '/' + field.filter + '/' + data[field.filterKey]%>">
                                                    <%-data[field.key]%>
                                                </a>
                                            <%}else{%>
                                                <%-data[field.key]%>
                                            <%}%>
                                        </td>
                                    <%})%>
                                    <td class="text-end">
                                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                            <button type="button" class="btn btn-warning" onclick="deleteItemClick('<%-contentType.toLowerCase()%>', '<%=data.id%>', '<%=data[modelHeaders[0].key]%>')">Delete</button>
                                            <button type="button" class="btn btn-primary" onclick="editItemClick('<%-contentType.toLowerCase()%>', '<%=JSON.stringify(data)%>')">Edit</button>
                                        </div>
                                    </td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
    
        

    <footer class="footer mt-auto py-3 bg-body-tertiary">
        <div class="container">
            <span class="text-body-secondary">@copyright statico.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/script.js"></script>
</body>
</html>