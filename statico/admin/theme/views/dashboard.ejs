<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="/styles/style.css">
    <title>Statico - Admin Dashboard</title>
</head>
<body class="d-flex flex-column h-100">
   
        <div class="row h-100">
            <div class="sidebar col-md-3 col-lg-2">
                <ul class="list-group list-group-flush">
                    <% prismaModels.forEach((model) => { %>
                        <li class="list-group-item list-group-item-action d-flex flex-row <%- model.name == contentType ? 'active' : '' %>">
                            <% if(model.name == contentType){%>
                                <div class="w-100 me-2 fw-bold">
                                    <span class="badge text-bg-warning rounded-pill me-2 boxShadow"><%= model.count %></span>
                                    <%=model.header%>
                                </div>
                            <%}else{%>
                                <a href="/admin/<%-model.name%>" class="d-block w-100 me-2 text-decoration-none fw-bold">
                                    <span class="badge text-bg-warning rounded-pill me-2 boxShadow"><%= model.count %></span>
                                    <%=model.header%>
                                </a>
                            <%}%>
                            <div class="pointer modelAddBtn" onclick="openModelView('<%-model.name%>')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                  </svg>
                            </div>
                        </li>
                    <%})%>
                    </ul>
            </div>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="horizontal-collapse">
                    <div>
                        <div id="close-model-create" class="close-model-create" onclick="closeModelView()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                              </svg>
                        </div>
                        <div id="model-user" class="content-type-wrapp">
                            <h3>Create User</h3>
                            <form action="/admin/create/user" method="POST" onsubmit="return createModel('user')">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="email" placeholder="name@example.com" value="" required>
                                    <label for="email">Email address</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="password" placeholder="Password" required>
                                    <label for="password">Password</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="username" placeholder="name@example.com" required>
                                    <label for="username">User name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="role" aria-label="Floating label select example">
                                        <% roles.forEach((role) => { %>
                                            <option value="<%-role.id%>"><%-role.name%></option>
                                        <%})%>
                                        
                                    </select>
                                    <label for="role">Role</label>
                                </div>
                                <button type="subbmit" class="btn btn-primary">Create</button>
                            </form>
                        </div>
                        <div id="model-post" class="content-type-wrapp d-none">
                            <form action="/admin/create/post" method="POST" onsubmit="return createModel('post')">

                                <button type="subbmit" class="btn btn-primary">create</button>
                            </form>
                        </div>
                        <div id="model-comment" class="content-type-wrapp d-none">
                            <form action="/admin/create/comment" method="POST" onsubmit="return createModel('comment')">

                                <button type="subbmit" class="btn btn-primary">create</button>
                            </form>
                        </div>
                        <div id="model-role" class="content-type-wrapp d-none">
                            <form action="/admin/create/role" method="POST" onsubmit="return createModel('role')">

                                <button type="subbmit" class="btn btn-primary">create</button>
                            </form>
                        </div>
                    </div>
                    
                    <div>
                        <header>

                        </header>
                        <table class="table caption-top">
                            <caption>List of <%-contentType%></caption>
                            <thead class="table-dark">
                                <tr>
                                    <% modelHeaders.forEach((field) => {%>
                                        <th scope="col">
                                            <%-field.header%>
                                        </th>
                                    <%})%>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                <% modelData.forEach((data) => {%>
                                    <tr>
                                        <!-- < %- JSON.stringify(data) %> -->
                                        <% modelHeaders.forEach((field) => {%>
                                            <td>
                                                <%-data[field.key]%>
                                            </td>
                                        <%})%>
                                        <td>
                                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                                <button type="button" class="btn btn-warning" onclick="deleteItemClick('<%-data.id%>')">Delete</button>
                                                <button type="button" class="btn btn-primary" onclick="editItemClick('<%-data.id%>')">Edit</button>
                                            </div>
                                        </td>
                                    </tr>
                                <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    

    <footer class="footer mt-auto py-3 bg-body-tertiary">
        <div class="container">
            <span class="text-body-secondary">@copyright statico.</span>
        </div>
    </footer>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/script.js"></script>
</body>
</html>